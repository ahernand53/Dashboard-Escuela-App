@model Curso 

@{
    ViewData["Title"] = "Creacion de curso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <div class="container text-center">
        <h2>Nuevo Curso</h2>
    </div>
</div>

<div class="container">
    <div class="card w-50 mx-auto">
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <label asp-for="Nombre"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Dirección"></label>
                    <input asp-for="Dirección" class="form-control" />
                    <span asp-validation-for="Dirección" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Jornada"></label>
                    @Html.DropDownList(
                        "Jornada",
                        Html.GetEnumSelectList<TiposJornada>(),
                        "-- Seleccione una jornada --",
                        new {@class = "form-control"}
                    )
                    <span asp-validation-for="Jornada" class="text-danger"></span>
                </div>

                <input type="submit" value="Crear Curso" class="btn btn-success btn-block" />
            </form>
        </div>
    </div>
</div>

